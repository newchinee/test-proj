<% provide(:title, 'All categories') %>
<h1>All categories</h1>

<%= link_to new_category_path, class: "btn btn-large btn-primary" do %>
		<i class="icon-plus icon-white"></i><span class="button_text"> Add</span>
<% end %>

<br /><br />

<%= form_tag categories_path, :method => 'get', :id => "categories_search", :class => "search_form" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
  <div id="categories"><%= render 'categories' %></div>
<% end %>