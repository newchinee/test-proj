<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= link_to new_user_path, class: "btn btn-large btn-primary" do %>
		<i class="icon-plus icon-white"></i><span class="button_text"> Add</span>
<% end %>

<br /><br />

<%= form_tag users_path, :method => 'get', :id => "users_search", :class => "search_form" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
  <div id="users"><%= render 'users' %></div>
<% end %>