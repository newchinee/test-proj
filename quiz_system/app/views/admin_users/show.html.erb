<% provide(:title, "Admin Profile (#{@admin_user.first_name} #{@admin_user.last_name})") %>
<h1>User profile</h1>
<div class="row">
  <div class="span6 offset3">
	<p>First Name: <%= @admin_user.first_name %></p>
	<p>Last Name: <%= @admin_user.last_name %></p>
	<p>Email: <%= @admin_user.email %></p>
	
	<%= link_to edit_admin_user_path, class: "btn btn-large btn-primary" do %>
		<i class="icon-pencil icon-white"></i><span class="button_text"> Edit</span>
	<% end %>
	<% if @admin_user.id != current_admin_user.id %>
		<%= link_to @user, method: :delete, class: "btn btn-large btn-primary" do %>
			<i class="icon-remove icon-white"></i><span class="button_text"> Delete</span>
		<% end %>
	<% end %>
  </div>
</div>
